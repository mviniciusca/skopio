{% extends "books/base.html.twig" %}
{% block content %}
        <h1>Create a New Book</h1>
        <h6>{{error}}</h6>
        <form action="/books/new" method="post">
            <input class="form-control" type="text" name="title" placeholder="Title"><br/>
            <input class="form-control" type="text" name="author" placeholder="Author"><br/>
            <input class="form-control" type="text" name="genre" placeholder="Genre"><br/>
            <input class="form-control" type="text" name="year" placeholder="Year"><br/>
            <input class="form-control" type="text" name="isbn" placeholder="ISBN"><br/>
            <input type="hidden" value="true" name="create"/>
            <button class="btn btn-primary" type="submit" value="Add New Book">Create new Book</button>
        </form>

        <button id="btn-add">add</button>
    </div>
{% endblock %}